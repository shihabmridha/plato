<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:plato.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="plato.Views.ResponseHeadersView">

    <DockPanel Margin="5">
        <TextBlock DockPanel.Dock="Top" Text="Response Headers" Margin="0,0,0,10"/>
        
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" CanUserReorderColumns="True" CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Header" Width="*" />
                <DataGridTextColumn Header="Value" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl> 