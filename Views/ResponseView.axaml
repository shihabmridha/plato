<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:plato.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="plato.Views.ResponseView">

    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBlock Text="Status:" VerticalAlignment="Center"/>
            <TextBlock Text="200 OK" Foreground="Green" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="Time:" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="120 ms" VerticalAlignment="Center"/>
            <TextBlock Text="Size:" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="1.2 KB" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBox AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas, Menlo, Monospace"/>
    </DockPanel>
</UserControl> 